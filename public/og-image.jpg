<svg width="1200" height="630" xmlns="http://www.w3.org/2000/svg">
  <!-- Background -->
  <rect width="1200" height="630" fill="#000000"/>
  
  <!-- Red gradient overlay -->
  <defs>
    <linearGradient id="redGrad" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#1a0000;stop-opacity:1" />
      <stop offset="50%" style="stop-color:#330000;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#000000;stop-opacity:1" />
    </linearGradient>
    <filter id="glow">
      <feGaussianBlur stdDeviation="4" result="coloredBlur"/>
      <feMerge>
        <feMergeNode in="coloredBlur"/>
        <feMergeNode in="SourceGraphic"/>
      </feMerge>
    </filter>
  </defs>
  
  <rect width="1200" height="630" fill="url(#redGrad)"/>
  
  <!-- Grid pattern -->
  <pattern id="grid" width="50" height="50" patternUnits="userSpaceOnUse">
    <path d="M 50 0 L 0 0 0 50" fill="none" stroke="#ff0000" stroke-width="0.5" opacity="0.1"/>
  </pattern>
  <rect width="1200" height="630" fill="url(#grid)"/>
  
  <!-- Border -->
  <rect x="40" y="40" width="1120" height="550" fill="none" stroke="#ff0000" stroke-width="8" filter="url(#glow)"/>
  
  <!-- Corner accents -->
  <line x1="40" y1="40" x2="100" y2="40" stroke="#ff0000" stroke-width="12"/>
  <line x1="40" y1="40" x2="40" y2="100" stroke="#ff0000" stroke-width="12"/>
  
  <line x1="1160" y1="40" x2="1100" y2="40" stroke="#ff0000" stroke-width="12"/>
  <line x1="1160" y1="40" x2="1160" y2="100" stroke="#ff0000" stroke-width="12"/>
  
  <line x1="40" y1="590" x2="100" y2="590" stroke="#ff0000" stroke-width="12"/>
  <line x1="40" y1="590" x2="40" y2="530" stroke="#ff0000" stroke-width="12"/>
  
  <line x1="1160" y1="590" x2="1100" y2="590" stroke="#ff0000" stroke-width="12"/>
  <line x1="1160" y1="590" x2="1160" y2="530" stroke="#ff0000" stroke-width="12"/>
  
  <!-- Logo circle -->
  <circle cx="600" cy="200" r="60" fill="#ff0000" filter="url(#glow)"/>
  
  <!-- Main text -->
  <text x="600" y="320" font-family="Arial, sans-serif" font-size="72" font-weight="bold" fill="#ffffff" text-anchor="middle" filter="url(#glow)">
    HORIZONWEBWORX
  </text>
  
  <!-- Subtitle -->
  <text x="600" y="380" font-family="Arial, sans-serif" font-size="32" fill="#cccccc" text-anchor="middle">
    Custom Web Development &amp; AI Automation
  </text>
  
  <!-- Location -->
  <text x="600" y="450" font-family="Arial, sans-serif" font-size="28" fill="#ff0000" text-anchor="middle">
    üìç Montreal, QC | üìû +1 (438) 531-6242
  </text>
  
  <!-- Bottom text -->
  <text x="600" y="520" font-family="Arial, sans-serif" font-size="24" fill="#888888" text-anchor="middle">
    admin@horizonwebworx.com | horizonwebworx.com
  </text>
</svg>
